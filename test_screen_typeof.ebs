// Test script for screen component typeof functionality
// This tests the new Screen.xxx type system for screen components

screen myScreen = {
    "title": "Test Screen",
    "width": 400,
    "height": 300,
    "sets": [
        {
            "setname": "main",
            "scope": "visible",
            "vars": [
                {
                    "name": "clientText",
                    "type": "string",
                    "default": "Sample text",
                    "display": {
                        "type": "textarea"
                    }
                },
                {
                    "name": "nameField",
                    "type": "string",
                    "default": "",
                    "display": {
                        "type": "textfield"
                    }
                },
                {
                    "name": "saveButton",
                    "type": "string",
                    "display": {
                        "type": "button"
                    }
                }
            ]
        }
    ]
};

// Test typeof on screen components
print "Testing typeof on screen components:";
print "typeof myScreen.clientText = " + typeof myScreen.clientText;
print "typeof myScreen.nameField = " + typeof myScreen.nameField;
print "typeof myScreen.saveButton = " + typeof myScreen.saveButton;

// Test that we can still access the values
print "";
print "Testing value access:";
print "myScreen.clientText = " + myScreen.clientText;
print "myScreen.nameField = " + myScreen.nameField;

