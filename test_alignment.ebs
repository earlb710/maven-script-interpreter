// Test script for contentAlignment and itemAlignment properties
print("Testing alignment properties");
print("============================");

// Create a simple screen to test alignment properties
screen testScreen = {
    "sets": [{
        "setname": "main",
        "vars": [
            {"name": "leftText", "datatype": "string", "value": "Left"},
            {"name": "centerText", "datatype": "string", "value": "Center"},
            {"name": "rightText", "datatype": "string", "value": "Right"}
        ]
    }],
    "areas": [{
        "name": "mainArea",
        "type": "vbox",
        "spacing": "10",
        "padding": "20",
        "items": [
            {
                "varRef": "leftText",
                "display": {
                    "type": "textfield",
                    "labelText": "Content Left Aligned:",
                    "maxLength": 20
                },
                "contentAlignment": "left"
            },
            {
                "varRef": "centerText",
                "display": {
                    "type": "textfield",
                    "labelText": "Content Center Aligned:",
                    "maxLength": 20
                },
                "contentAlignment": "center"
            },
            {
                "varRef": "rightText",
                "display": {
                    "type": "textfield",
                    "labelText": "Content Right Aligned:",
                    "maxLength": 20
                },
                "contentAlignment": "right"
            }
        ]
    }]
};

// Test using scr.setProperty to change alignments
print("Setting contentAlignment via scr.setProperty...");
call scr.setProperty("testScreen.leftText", "contentAlignment", "center");
print("Changed leftText contentAlignment to center");

// Test getting alignment properties
var align1: string = scr.getProperty("testScreen.centerText", "contentAlignment");
print("centerText contentAlignment: " + align1);

print("");
print("Test completed! Open the screen to see the alignment effects.");
print("You should see:");
print("- First field: text aligned left");
print("- Second field: text aligned center");
print("- Third field: text aligned right");
