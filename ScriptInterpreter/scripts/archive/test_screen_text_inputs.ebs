// Test Script: Text Input Controls
// Description: Tests all text-based input controls (textfield, textarea, passwordfield)
// Author: EBS Test Suite
// Date: 2025-11-15

screen textInputScreen = {
    "title": "Text Input Controls Test",
    "width": 700,
    "height": 650,
    "vars": [
        {
            "name": "singleLineText",
            "type": "string",
            "default": "",
            "display": {"type": "textfield", "mandatory": true, "promptText": "Enter single line text"}
        },
        {
            "name": "email",
            "type": "string",
            "default": "",
            "display": {
                "type": "textfield", 
                "mandatory": true,
                "pattern": "^[\\w.-]+@[\\w.-]+\\.\\w+$",
                "promptText": "Enter email address"
            }
        },
        {
            "name": "multiLineText",
            "type": "string",
            "default": "",
            "display": {"type": "textarea", "promptText": "Enter multiple lines of text here"}
        },
        {
            "name": "description",
            "type": "string",
            "default": "",
            "display": {"type": "textarea", "mandatory": false, "promptText": "Enter a detailed description"}
        },
        {
            "name": "password",
            "type": "string",
            "default": "",
            "display": {"type": "passwordfield", "mandatory": true, "promptText": "Enter password"}
        },
        {
            "name": "confirmPassword",
            "type": "string",
            "default": "",
            "display": {"type": "passwordfield", "mandatory": true, "promptText": "Confirm password"}
        },
        {
            "name": "upperCaseText",
            "type": "string",
            "default": "",
            "display": {
                "type": "textfield",
                "caseFormat": "upper",
                "promptText": "Enter text (will be uppercase)"
            }
        },
        {
            "name": "lowerCaseText",
            "type": "string",
            "default": "",
            "display": {
                "type": "textfield",
                "caseFormat": "lower",
                "promptText": "Enter text (will be lowercase)"
            }
        }
    ]
};

// Test variable access
print "Testing text input controls...";
print "Single Line Text: " + textInputScreen.singleLineText;
print "Email: " + textInputScreen.email;
print "Multi-line Text: " + textInputScreen.multiLineText;
print "Password: " + textInputScreen.password;

// Modify some values
textInputScreen.singleLineText = "Modified single line text";
textInputScreen.email = "newemail@test.com";
textInputScreen.description = "This is a comprehensive test\nof the textarea control\nwith multiple lines.";
textInputScreen.confirmPassword = "secret123";

print "";
print "Modified values:";
print "Single Line Text: " + textInputScreen.singleLineText;
print "Email: " + textInputScreen.email;
print "Description: " + textInputScreen.description;

// Show the screen
print "";
print "Displaying text input screen...";
screen textInputScreen show;

print "Text input controls test completed!";
