// Function to update all control texts
updateAllTexts() {
    updatecount = updatecount + 1;
    var countStr: string = string(updatecount);
    
    // Update Button
    call scr.setProperty("testAllControlsScreen.testButton", "itemText", "Button: Updated " + countStr);
    
    // Update Label
    call scr.setProperty("testAllControlsScreen.testLabel", "itemText", "Label: Updated " + countStr);
    
    // Update Text
    call scr.setProperty("testAllControlsScreen.testText", "itemText", "Text: Updated " + countStr);
    
    // Update Hyperlink
    call scr.setProperty("testAllControlsScreen.testHyperlink", "itemText", "Hyperlink: Updated " + countStr);
    
    // Update ToggleButton
    call scr.setProperty("testAllControlsScreen.testToggleButton", "itemText", "ToggleButton: Updated " + countStr);
    
    // Update CheckBox
    call scr.setProperty("testAllControlsScreen.testCheckBox", "itemText", "CheckBox: Updated " + countStr);
    
    // Update RadioButton
    call scr.setProperty("testAllControlsScreen.testRadioButton", "itemText", "RadioButton: Updated " + countStr);
    
    print "All control texts updated successfully - Count: " + countStr;
}

// Function to reset all control texts
resetAllTexts() {
    updatecount = 0;
    
    // Reset all controls to initial text
    call scr.setProperty("testAllControlsScreen.testButton", "itemText", "Button: Reset");
    call scr.setProperty("testAllControlsScreen.testLabel", "itemText", "Label: Reset");
    call scr.setProperty("testAllControlsScreen.testText", "itemText", "Text: Reset");
    call scr.setProperty("testAllControlsScreen.testHyperlink", "itemText", "Hyperlink: Reset");
    call scr.setProperty("testAllControlsScreen.testToggleButton", "itemText", "ToggleButton: Reset");
    call scr.setProperty("testAllControlsScreen.testCheckBox", "itemText", "CheckBox: Reset");
    call scr.setProperty("testAllControlsScreen.testRadioButton", "itemText", "RadioButton: Reset");
    
    print "All control texts reset successfully";
}

