// Simple Radio Button Grouping Test
// Demonstrates that radio buttons in the same set are mutually exclusive

print "Simple Radio Button Grouping Test";
print "==================================";
print "";

// Define a screen with a single radio button group
screen simpleRadioTest = {
    "title": "Radio Button Grouping - Color Selection",
    "width": 400,
    "height": 300,
    "sets": [
        {
            "setname": "colorChoice",
            "vars": [
                {
                    "name": "red",
                    "type": "bool",
                    "default": true,
                    "display": {
                        "type": "radiobutton",
                        "labelText": "Red"
                    }
                },
                {
                    "name": "green",
                    "type": "bool",
                    "default": false,
                    "display": {
                        "type": "radiobutton",
                        "labelText": "Green"
                    }
                },
                {
                    "name": "blue",
                    "type": "bool",
                    "default": false,
                    "display": {
                        "type": "radiobutton",
                        "labelText": "Blue"
                    }
                }
            ]
        }
    ]
};

print "Initial State:";
print "  Red: " + simpleRadioTest.red;
print "  Green: " + simpleRadioTest.green;
print "  Blue: " + simpleRadioTest.blue;
print "";

print "Selecting Green...";
simpleRadioTest.green = true;
simpleRadioTest.red = false;

print "After Selecting Green:";
print "  Red: " + simpleRadioTest.red;
print "  Green: " + simpleRadioTest.green;
print "  Blue: " + simpleRadioTest.blue;
print "";

print "Selecting Blue...";
simpleRadioTest.blue = true;
simpleRadioTest.green = false;

print "After Selecting Blue:";
print "  Red: " + simpleRadioTest.red;
print "  Green: " + simpleRadioTest.green;
print "  Blue: " + simpleRadioTest.blue;
print "";

print "âœ“ Test shows programmatic mutual exclusivity";
print "";
print "Now displaying screen for visual verification...";
print "Try clicking different radio buttons - only one should be selected at a time!";
print "";

// Display the screen for interactive testing
show screen simpleRadioTest;

print "Radio Button Grouping Test Complete!";
