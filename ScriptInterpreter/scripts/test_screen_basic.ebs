// Create a simple screen with basic text inputs and a counter
screen basicScreen = {
    "title": "Basic Screen Test",
    "width": 600,
    "height": 400,
    "vars": [
        {
            "name": "userName",
            "type": "string",
            "default": "Guest User",
            "display": {"type": "textfield", "mandatory": true}
        },
        {
            "name": "counter",
            "type": "int",
            "default": 0,
            "display": {"type": "textfield"}
        },
        {
            "name": "message",
            "type": "string",
            "default": "Welcome to the EBS Screen Test!",
            "display": {"type": "textarea"}
        }
    ]
};

// Test variable access (reading default values)
print "Testing variable access...";
print "User Name: " + basicScreen.userName;
print "Counter: " + basicScreen.counter;
print "Message: " + basicScreen.message;

// Test variable modification
print "";
print "Modifying variables...";
basicScreen.userName = "Test User";
basicScreen.counter = 42;
basicScreen.message = "Variables have been modified successfully!";

// Verify modifications
print "User Name: " + basicScreen.userName;
print "Counter: " + basicScreen.counter;
print "Message: " + basicScreen.message;

// Show the screen
print "";
print "Displaying screen...";
screen basicScreen show;

print "Basic screen test completed successfully!";
