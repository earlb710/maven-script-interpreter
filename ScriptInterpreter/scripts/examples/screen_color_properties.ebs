// ============================================================================
// EXAMPLE 5: Using itemColor (Legacy) vs textColor (Preferred)
// ============================================================================
print "Example 5: itemColor vs textColor";
print "=================================";

screen legacyVsNewExample = {
    "title": "itemColor vs textColor",
    "width": 600,
    "height": 400,
    "sets": [
        {
            "setname": "main",
            "vars": [
                {
                    "name": "field1",
                    "type": "string",
                    "default": "Using itemColor (legacy)",
                    "display": {
                        "type": "textfield",
                        "labelText": "Legacy itemColor:",
                        "labelColor": "#000000",
                        "itemColor": "#FF00FF",  // Using itemColor (still works)
                        "labelPosition": "left"
                    }
                },
                {
                    "name": "field2",
                    "type": "string",
                    "default": "Using textColor (preferred)",
                    "display": {
                        "type": "textfield",
                        "labelText": "New textColor:",
                        "labelColor": "#000000",
                        "textColor": "#00FFFF",  // Using textColor (preferred)
                        "labelPosition": "left"
                    }
                },
                {
                    "name": "field3",
                    "type": "string",
                    "default": "textColor takes precedence",
                    "display": {
                        "type": "textfield",
                        "labelText": "Both specified:",
                        "labelColor": "#000000",
                        "itemColor": "#00FF00",  // Green - will be ignored
                        "textColor": "#0000FF",  // Blue - takes precedence
                        "labelPosition": "left"
                    }
                }
            ]
        }
    ],
    "areas": [
        {
            "areaname": "form",
            "containerType": "vbox",
            "items": [
                {"name": "field1", "varRef": "field1"},
                {"name": "field2", "varRef": "field2"},
                {"name": "field3", "varRef": "field3"}
            ]
        }
    ]
};

show screen legacyVsNewExample;

print "itemColor vs textColor behavior:";
print "  - Both itemColor and textColor work";
print "  - textColor is preferred for consistency with labelColor";
print "  - When both are specified, textColor takes precedence";
print "  - Field 3 should show blue (textColor), not green (itemColor)";
print "";

