        {
            "name": "lowerCaseText",
            "type": "string",
            "default": "TEXT WILL BE LOWERCASE",
            "display": {
                "type": "textfield",
                "caseFormat": "lower"
            }
        }
    ]
};

// Test variable access
print "Testing text input controls...";
print "Single Line Text: " + textInputScreen.singleLineText;
print "Email: " + textInputScreen.email;
print "Multi-line Text: " + textInputScreen.multiLineText;
