        {
            "name": "description",
            "type": "string",
            "default": "Enter a detailed description...",
            "display": {"type": "textarea", "mandatory": false}
        },
        {
            "name": "password",
            "type": "string",
            "default": "secret123",
            "display": {"type": "passwordfield", "mandatory": true}
        },
        {
            "name": "confirmPassword",
            "type": "string",
            "default": "",
            "display": {"type": "passwordfield", "mandatory": true}
        },
        {
            "name": "upperCaseText",
            "type": "string",
            "default": "text will be uppercase",
            "display": {
                "type": "textfield",
