        },
        {
            "name": "email",
            "type": "string",
            "default": "user@example.com",
            "display": {
                "type": "textfield", 
                "mandatory": true,
                "pattern": "^[\\w.-]+@[\\w.-]+\\.\\w+$"
            }
        },
        {
            "name": "multiLineText",
            "type": "string",
            "default": "This is a multi-line\ntextarea control.\nYou can enter multiple lines of text here.",
