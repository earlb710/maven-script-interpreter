{
  "title": "EBS Syntax Help",
  "width": 1000,
  "height": 700,
  "vars": [
    {
      "name": "selectedTopic",
      "type": "string",
      "default": ""
    },
    {
      "name": "helpContent",
      "type": "string",
      "default": ""
    },
    {
      "name": "searchQuery",
      "type": "string",
      "default": ""
    }
  ],
  "area": [
    {
      "name": "mainLayout",
      "type": "splitpane",
      "spacing": "0",
      "padding": "0",
      "hgrow": "ALWAYS",
      "vgrow": "ALWAYS",
      "areas": [
        {
          "name": "treeArea",
          "type": "vbox",
          "spacing": "5",
          "padding": "5",
          "minWidth": "200",
          "prefWidth": "250",
          "hgrow": "NEVER",
          "vgrow": "ALWAYS",
          "style": "-fx-border-color: #cccccc; -fx-border-width: 0 1 0 0;",
          "areas": [
            {
              "name": "searchBox",
              "type": "hbox",
              "spacing": "5",
              "padding": "0",
              "hgrow": "ALWAYS",
              "vgrow": "NEVER",
              "disableLabelAlignment": true,
              "items": [
                {
                  "name": "searchCombo",
                  "varRef": "searchQuery",
                  "sequence": 1,
                  "editable": true,
                  "hgrow": "ALWAYS",
                  "vgrow": "NEVER",
                  "minWidth": "150",
                  "prefWidth": "180",
                  "display": {
                    "type": "combobox",
                    "promptHelp": "Search help topics...",
                    "options": []
                  }
                },
                {
                  "name": "searchButton",
                  "varRef": "",
                  "sequence": 2,
                  "hgrow": "NEVER",
                  "vgrow": "NEVER",
                  "prefWidth": "60",
                  "display": {
                    "type": "button",
                    "labelText": "Search",
                    "onClick": "call performSearch(helpScreen.searchQuery);"
                  }
                }
              ]
            },
            {
              "name": "helpTreeArea",
              "type": "vbox",
              "hgrow": "NEVER",
              "vgrow": "ALWAYS",
              "disableLabelAlignment": true,
              "items": [
                {
                  "name": "helpTree",
                  "varRef": "selectedTopic",
                  "sequence": 1,
                  "hgrow": "NEVER",
                  "vgrow": "ALWAYS",
                  "minWidth": "200",
                  "prefWidth": "250",
                  "minHeight": "200",
                  "maxHeight": "MAX",
                  "display": {
                    "type": "treeview",
                    "expandAll": false,
                    "showRoot": false,
                    "onChange": "helpScreen.helpContent = call convertToHtml(call getHelpContent(helpScreen.selectedTopic));",
                    "treeItems": []
                  }
                }
              ]
            }
          ]
        },
        {
          "name": "contentArea",
          "type": "vbox",
          "spacing": "5",
          "padding": "10",
          "hgrow": "ALWAYS",
          "vgrow": "ALWAYS",
          "disableLabelAlignment": true,
          "items": [
            {
              "name": "helpContentView",
              "varRef": "helpContent",
              "sequence": 1,
              "hgrow": "ALWAYS",
              "vgrow": "ALWAYS",
              "minWidth": "200",
              "prefWidth": "400",
              "maxWidth": "MAX",
              "minHeight": "200",
              "prefHeight": "100",
              "maxHeight": "MAX",
              "style": "-fx-border-color: #b0b0b0; -fx-border-width: 1; -fx-border-style: solid; -fx-border-insets: -1;",
              "display": {
                "type": "webview"
              }
            }
          ]
        }
      ]
    }
  ]
}
