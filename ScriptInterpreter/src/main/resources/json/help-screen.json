{
  "title": "EBS Syntax Help",
  "width": 1000,
  "height": 700,
  "vars": [
    {
      "name": "selectedTopic",
      "type": "string",
      "default": ""
    },
    {
      "name": "helpContent",
      "type": "string",
      "default": ""
    }
  ],
  "area": [
    {
      "name": "mainLayout",
      "type": "splitpane",
      "spacing": "0",
      "padding": "0",
      "hgrow": "ALWAYS",
      "vgrow": "ALWAYS",
      "areas": [
        {
          "name": "treeArea",
          "type": "vbox",
          "spacing": "0",
          "minWidth": "200",
          "prefWidth": "250",
          "hgrow": "NEVER",
          "vgrow": "ALWAYS",
          "style": "-fx-border-color: #cccccc; -fx-border-width: 0 1 0 0;",
          "items": [
            {
              "name": "helpTree",
              "varRef": "selectedTopic",
              "seq": 1,
              "stateful": false,
              "hgrow": "NEVER",
              "vgrow": "ALWAYS",
              "minWidth": "200",
              "prefWidth": "250",
              "minHeight": "200",
              "prefHeight": "200",
              "maxHeight": "MAX",
              "display": {
                "type": "treeview",
                "labelText": "Help Topic",
                "labelPosition": "TOP",
                "expandAll": true,
                "showRoot": false,
                "onChange": "helpScreen.helpContent = call convertToHtml(call getHelpContent(helpScreen.selectedTopic));",
                "treeItems": []
              }
            }
          ]
        },
        {
          "name": "contentArea",
          "type": "vbox",
          "spacing": "5",
          "padding": "10",
          "hgrow": "ALWAYS",
          "vgrow": "ALWAYS",
          "items": [
            {
              "name": "helpContentView",
              "varRef": "helpContent",
              "seq": 1,
              "stateful": false,
              "hgrow": "ALWAYS",
              "vgrow": "ALWAYS",
              "minWidth": "200",
              "prefWidth": "400",
              "maxWidth": "MAX",
              "minHeight": "200",
              "prefHeight": "100",
              "maxHeight": "MAX",
              "style": "-fx-border-color: #b0b0b0; -fx-border-width: 1; -fx-border-style: solid; -fx-border-insets: -1;",
              "display": {
                "type": "webview",
                "labelText": "Help Content",
                "labelPosition": "TOP"
              }
            }
          ]
        }
      ]
    }
  ]
}
