{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/earlb710/maven-script-interpreter/schemas/display-metadata.json",
  "title": "DisplayMetadata",
  "description": "Schema for JavaFX UI control display metadata in EBS screen system",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "description": "UI control type",
      "enum": [
        "textfield", "textarea", "passwordfield",
        "checkbox", "radiobutton", "togglebutton", "combobox", "choicebox", "listview",
        "spinner", "slider",
        "datepicker",
        "colorpicker",
        "button",
        "label", "labeltext", "text", "hyperlink", "separator",
        "imageview", "mediaview", "webview", "chart",
        "progressbar", "progressindicator",
        "custom"
      ]
    },
    "mandatory": {
      "type": "boolean",
      "description": "Whether the field is mandatory/required",
      "default": false
    },
    "case": {
      "type": "string",
      "description": "Text case transformation",
      "enum": ["upper", "lower", "title"]
    },
    "min": {
      "oneOf": [
        { "type": "number" },
        { "type": "string" }
      ],
      "description": "Minimum value constraint (for numeric or date inputs)"
    },
    "max": {
      "oneOf": [
        { "type": "number" },
        { "type": "string" }
      ],
      "description": "Maximum value constraint (for numeric or date inputs)"
    },
    "style": {
      "type": "string",
      "description": "JavaFX CSS style string for the control"
    },
    "cssClass": {
      "type": "string",
      "description": "CSS class name for the control"
    },
    "screenName": {
      "type": "string",
      "description": "Associated screen name"
    },
    "alignment": {
      "type": "string",
      "description": "Text/content alignment",
      "enum": ["left", "center", "right", "justify"]
    },
    "pattern": {
      "type": "string",
      "description": "Regular expression pattern for validation (useful for text inputs)"
    },
    "promptHelp": {
      "type": "string",
      "description": "Placeholder text for text inputs (hint shown in empty field)"
    },
    "labelText": {
      "type": "string",
      "description": "Label text displayed before/above the control"
    },
    "labelTextAlignment": {
      "type": "string",
      "description": "Label text alignment",
      "enum": ["left", "center", "right", "l", "c", "r"]
    },
    "options": {
      "type": "array",
      "description": "Options/values for selection controls (ComboBox, ChoiceBox, ListView)",
      "items": {
        "type": "string"
      }
    },
    "labelColor": {
      "type": "string",
      "description": "Label text color (e.g., '#000000', 'red')"
    },
    "labelBold": {
      "type": "boolean",
      "description": "Whether the label text should be bold",
      "default": false
    },
    "labelItalic": {
      "type": "boolean",
      "description": "Whether the label text should be italic",
      "default": false
    },
    "labelFontSize": {
      "type": "string",
      "description": "Label font size (e.g., '12px', '14px', '16px', '1.2em')"
    },
    "itemFontSize": {
      "type": "string",
      "description": "Control/item font size (e.g., '12px', '14px', '16px', '1em')"
    },
    "maxLength": {
      "type": "integer",
      "description": "Maximum length/width for the control (number of characters for text fields)",
      "minimum": 1
    },
    "onClick": {
      "type": "string",
      "description": "onClick event handler - EBS code to execute when button is clicked"
    }
  },
  "examples": [
    {
      "type": "textfield",
      "mandatory": true,
      "pattern": "^[\\w.-]+@[\\w.-]+\\.[a-z]{2,}$",
      "alignment": "left",
      "promptHelp": "Enter your email address",
      "labelText": "Email:"
    },
    {
      "type": "passwordfield",
      "mandatory": true,
      "case": "lower",
      "promptHelp": "Enter your password"
    },
    {
      "type": "spinner",
      "min": 0,
      "max": 100
    },
    {
      "type": "datepicker",
      "min": "2024-01-01",
      "max": "2024-12-31"
    },
    {
      "type": "combobox",
      "options": ["Option 1", "Option 2", "Option 3"],
      "promptHelp": "Select an option"
    },
    {
      "type": "label",
      "labelText": "Important Notice",
      "labelColor": "#FF0000",
      "labelBold": true,
      "labelTextAlignment": "center"
    },
    {
      "type": "textfield",
      "labelText": "Custom Size Label",
      "labelFontSize": "16px",
      "promptHelp": "This label has a custom font size"
    },
    {
      "type": "textfield",
      "labelText": "Large Font Field",
      "itemFontSize": "18px",
      "maxLength": 25,
      "promptHelp": "Field with large font and custom width"
    },
    {
      "type": "textfield",
      "labelText": "Short Field",
      "itemFontSize": "14px",
      "maxLength": 10,
      "promptHelp": "Narrow field for short input"
    },
    {
      "type": "button",
      "labelText": "Submit",
      "onClick": "handleSubmit()"
    }
  ]
}
