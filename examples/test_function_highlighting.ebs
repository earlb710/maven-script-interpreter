// Test script for function highlighting
// This script should show:
// - Custom functions defined here highlighted with tok-function
// - Known builtins highlighted as builtins
// - Unknown functions with red underline (tok-function-error)

// Test Format 1: Basic function (namedBlock) - identifier {
greet {
    print("Hello from greet!");
}

// Test Format 2: Function with return type - identifier return type {
getValue return int {
    return 42;
}

// Test Format 3: Function with parameters - identifier(params) return type {
myFunction(x: int, y: int) return int {
    var result: int = x + y;
    return result;
}

// Test Format 4: With 'function' keyword
function calculateTotal(a: int, b: int) return int {
    // This should be highlighted as known function
    var sum: int = call myFunction(a, b);
    return sum;
}

// Main code
var x: int = 10;
var y: int = 20;

// Test calling functions - all should be highlighted as known custom functions
call greet();
var value: int = call getValue();
print("Value: " + value);

var total: int = call calculateTotal(x, y);
print("Total: " + total);

// This should be highlighted as builtin
var str: string = call string.toUpper("hello");
print("Uppercase: " + str);

// This should show red underline (unknown function)
var unknown: int = call unknownFunction(x, y);
print("Unknown result: " + unknown);

// This should show red underline (another unknown function)
call anotherUnknownFunc();

